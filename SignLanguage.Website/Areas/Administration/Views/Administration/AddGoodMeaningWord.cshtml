@model SignLanguage.Website.Areas.Administration.Models.GoodMeaningWord
@using SignLanguage.Website.HtmlHelpers

@{
    ViewData["Title"] = "AddGoodMeaningWord";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<h2 class="headertekst">Dodawanie nowych słówek do nauki</h2>
<hr />
<div class="container">
    <div class="row">
        <div class="col-lg-12">

            @using (Html.BeginForm())
            {
                @*@Html.AntiForgeryToken() *@

                <div class="form-horizontal">

                    <div class="form-group">
                        @Html.Label("Znaczenie słowa", null, htmlAttributes: new { @class = "control-label col-md-2" })
                        <div class="col-md-10">
                            @Html.TextBoxFor(model => model.WordName, new { @class = "form-control" })
                            @Html.ValidationMessageFor(model => model.WordName, "", new { @class = "text-danger" })
                        </div>
                    </div>

                    <div class="form-group">
                        @Html.Label("Url do słowa", null, htmlAttributes: new { @class = "control-label col-md-2" })
                        <div class="col-md-10">
                            @Html.TextBoxFor(model => model.Url, new { @class = "form-control" })
                            @Html.ValidationMessageFor(model => model.Url, "", new { @class = "text-danger" })
                        </div>
                    </div>

                    @Html.InputAdd()
                </div>
            }
        </div>
    </div>
</div>
