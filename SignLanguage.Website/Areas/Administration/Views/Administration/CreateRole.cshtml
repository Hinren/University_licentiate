@model SignLanguage.Website.Areas.Administration.Models.CreateRoleViewModel
@using SignLanguage.Website.HtmlHelpers

@{
    ViewData["Title"] = "CreateRole";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<h1>Stwórz nową rolę</h1>

<div class="container">
    <div class="row">
        <div class="col-lg-12">

            @using (Html.BeginForm())
            {
                @*@Html.AntiForgeryToken() *@

                <div class="form-horizontal">
                    <hr />
                    @Html.ValidationSummary(true, "", new { @class = "text-danger" })
                    <div class="form-group">
                        @Html.LabelFor(model => model.RoleName, htmlAttributes: new { @class = "control-label col-md-2" })
                        <div class="col-md-10">
                            @Html.TextBoxFor(model => model.RoleName, new { @class = "form-control" })
                            @Html.ValidationMessageFor(model => model.RoleName, "", new { @class = "text-danger" })
                        </div>
                    </div>

                    @Html.InputRegister()
                </div>
            }
        </div>
    </div>
</div>